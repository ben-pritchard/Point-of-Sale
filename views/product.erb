<h1>Info for <%= @product.name() %></h1>

<h3>Product Name: <%= @product.name() %></h3>

<form action='/edit_name' method='post'>
  <input name="_method" type="hidden" value="patch">

  <label for="name">Edit Name:</label>
  <input id="name" name="name" placeholder = "e.g. Flamethrower" type='text'>
  <input id="id" name="id" value= "<%= @product.id() %>" type='hidden'>

  <button type="submit">Submit</button>
</form>

<h3>Product Price: $<%= "%.2f" % @product.price() %></h3>

<form action='/edit_price' method='post'>
  <input name="_method" type="hidden" value="patch">

  <label for="price">Edit Price:</label>
  <input id="price" name="price" placeholder = "100000000" type='text'>
  <input id="id" name="id" value= "<%= @product.id() %>" type='hidden'>

  <button type="submit">Submit</button>
</form>

<a href="/">Back to Main Page</a>
